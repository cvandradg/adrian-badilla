{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@adrianbadilla/app": ["libs/adrianbadilla/frontend/ui/app/src/index.ts"],
      "@adrianbadilla/shared/*": [
        "libs/adrianbadilla/frontend/ui/shared/src/lib/*"
      ],
      "@adrianbadilla/login": [
        "libs/adrianbadilla/frontend/ui/login/src/index.ts"
      ],
      "@adrianbadilla/client": [
        "libs/adrianbadilla/frontend/ui/client/src/index.ts"
      ],
      "@adrianbadilla/dietas": [
        "libs/adrianbadilla/frontend/ui/dietas/src/index.ts"
      ],
      "@adrianbadilla/dashboard": [
        "libs/adrianbadilla/frontend/ui/dashboard/src/index.ts"
      ],
      "@materialFunctions": [
        "libs/adrianbadilla/frontend/shared/materialFunctions.ts"
      ],
      "@environments/*": [
        "libs/adrianbadilla/frontend/ui/shared/src/lib/environments/*"
      ],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
